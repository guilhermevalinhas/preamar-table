rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    function isOwner() { return request.auth != null && request.resource.data.ownerId == request.auth.uid; }
    function isExistingOwner() { return request.auth != null && resource.data.ownerId == request.auth.uid; }

    match /{collection}/{docId} {
      allow create: if isOwner();
      allow read, update, delete: if isExistingOwner();
    }
  }
}
